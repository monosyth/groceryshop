rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to get user's household ID
    function getUserHouseholdId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.householdId;
    }

    // Helper function to check if user is in the same household as the document
    function isHouseholdMember(docHouseholdId) {
      return isAuthenticated() &&
             docHouseholdId != null &&
             getUserHouseholdId() == docHouseholdId;
    }

    // Helper function to check if user owns OR is in same household
    function canAccess(userId, householdId) {
      return isOwner(userId) || isHouseholdMember(householdId);
    }

    // Households collection
    match /households/{householdId} {
      // Allow read for any authenticated user (needed to join via invite code)
      allow read: if isAuthenticated();
      // Allow create if authenticated and user is in the members list
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.members;
      // Allow update/delete only if user is already a member
      allow update, delete: if isAuthenticated() && request.auth.uid in resource.data.members;
    }

    // Receipts collection - accessible by owner OR household members
    match /receipts/{receiptId} {
      allow get: if canAccess(resource.data.userId, resource.data.householdId);
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if canAccess(resource.data.userId, resource.data.householdId);
    }

    // Shopping list collection - accessible by owner OR household members
    match /shoppingList/{itemId} {
      allow get: if canAccess(resource.data.userId, resource.data.householdId);
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if canAccess(resource.data.userId, resource.data.householdId);
    }

    // Saved recipes collection - accessible by owner OR household members
    match /savedRecipes/{recipeId} {
      allow get: if canAccess(resource.data.userId, resource.data.householdId);
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if canAccess(resource.data.userId, resource.data.householdId);
    }

    // Analytics collection - accessible by owner OR household members
    match /analytics/{analyticsId} {
      allow get: if canAccess(resource.data.userId, resource.data.householdId);
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if canAccess(resource.data.userId, resource.data.householdId);
    }

    // Pantry collection - accessible by owner OR household members
    match /pantry/{itemId} {
      allow get: if canAccess(resource.data.userId, resource.data.householdId);
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if canAccess(resource.data.userId, resource.data.householdId);
    }

    // Users collection - user profiles (only own profile)
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
